<tw_foodwaterbarsWindows>
  <!-- Raise the toolbelt window slightly -->
  <set xpath="/windows/window[@name='windowToolbelt']/@pos">-388,98</set>
<!-- Food -->
  <!-- Increase the height of the food bar-->
  <set xpath="/windows/window[@name='windowToolbelt']/rect/rect[2]/@height">18</set>
  <!-- Add our current food as text -->
  <insertAfter xpath="/windows/window[@name='windowToolbelt']/rect/rect[2]/sprite[2]">
    <label name="TextContent" depth="7" pos="0,0" text="{playerfood}" font_size="16" color="[white]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" controller="PlayerStatsWindow"/>
  </insertAfter>
<!-- Water -->
  <!-- Increase the height of the water bar-->
  <set xpath="/windows/window[@name='windowToolbelt']/rect/rect[3]/@height">18</set>
  <!-- Add our current water as text -->
  <insertAfter xpath="/windows/window[@name='windowToolbelt']/rect/rect[3]/sprite[2]">
    <label name="TextContent" depth="7" pos="0,0" text="{playerwater}" font_size="16" color="[white]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" pivot="topleft" controller="PlayerStatsWindow"/>
  </insertAfter>
</tw_foodwaterbarsWindows>
