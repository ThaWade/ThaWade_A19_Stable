<tw_tier6CraftingProgression>
<!-- Craft T6 of ALL weapons, tools and armors at max level of its corresponding perk.-->
  <set xpath="/progression/perks/perk[not (@name='perkAdvancedEngineering') and not (@name='perkLightArmor') and not (@name='perkHeavyArmor')]/effect_group/passive_effect[@name='CraftingTier' and @operation='base_add' and @value]/@value">1,2,3,4,5</set>

  <set xpath="/progression/perks/perk[@name='perkAdvancedEngineering']/effect_group/passive_effect[@name='CraftingTier' and @operation='base_add' and @value]/@value">1,5</set>

  <set xpath="/progression/perks/perk[@name='perkLightArmor']/effect_group/passive_effect[@name='CraftingTier' and @operation='base_add' and @value]/@value">1,5</set>

  <set xpath="/progression/perks/perk[@name='perkHeavyArmor']/effect_group/passive_effect[@name='CraftingTier' and @operation='base_add' and @value]/@value">1,5</set>
</tw_tier6CraftingProgression>
