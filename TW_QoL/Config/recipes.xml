<tw_qolRecipes>
<!-- Adding our recipes to recipes.xml -->
  <append xpath="/recipes">
<!-- Food -->
    <recipe name="foodCanBeef" count="5" craft_area="campfire" craft_tool="toolCookingPot" tags="perkMasterChef,learnable">
    	<ingredient name="drinkCanEmpty" count="5"/>
    	<ingredient name="foodRawMeat" count="25"/>
    	<effect_group>
    		<passive_effect name="CraftingIngredientCount" level="4,5" operation="base_add" value="-1" tags="foodRawMeat"/>
    	</effect_group>
    </recipe>

    <recipe name="foodCanStock" count="5" craft_area="campfire" craft_tool="toolCookingPot" tags="perkMasterChef,learnable">
      <ingredient name="drinkCanEmpty" count="5"/>
      <ingredient name="drinkJarBoiledWater" count="1"/>
    	<ingredient name="foodRawMeat" count="15"/>
      <ingredient name="resourceBone" count="25"/>
      <ingredient name="resourceAnimalFat" count="5"/>
      <effect_group>
        <passive_effect name="CraftingIngredientCount" level="4,5" operation="base_add" value="-1" tags="foodRawMeat,resourceBone,resourceAnimalFat"/>
      </effect_group>
    </recipe>

    <recipe name="drinkCanMegaCrush" count="1" craft_area="campfire" craft_tool="toolCookingPot" tags="perkMasterChef,learnable">
    	<ingredient name="drinkJarYuccaJuice" count="2"/>
    	<ingredient name="drinkJarCoffee" count="5"/>
    </recipe>
<!-- Medical -->
    <recipe name="medicalFirstAidBandage" count="1" tags="learnable">
    	<ingredient name="medicalAloeCream" count="1"/>
    	<ingredient name="medicalBandage" count="1"/>
    </recipe>
<!--  Misc. -->
    <recipe name="resourceDuctTape" count="5" craft_area="workbench" tags="workbenchCrafting">
      <ingredient name="resourceGlue" count="1"/>
      <ingredient name="resourceCloth" count="1"/>
    </recipe>

    <recipe name="meleeToolAllSteelParts" count="5" craft_area="workbench" tags="perkAdvancedEngineering,learnable">
    	<ingredient name="resourceForgedSteel" count="25"/>
    	<ingredient name="resourceOil" count="5"/>
    	<ingredient name="resourceMechanicalParts" count="10"/>
      <effect_group>
        <passive_effect name="CraftingIngredientCount" level="4,5" operation="base_add" value="-1" tags="resourceForgedSteel,resourceOil,resourceMechanicalParts"/>
      </effect_group>
    </recipe>

    <recipe name="meleeToolTorch" count="1">
    	<ingredient name="resourceOil" count="2"/>
    	<ingredient name="resourceCloth" count="2"/>
    	<ingredient name="resourceWood" count="1"/>
    </recipe>

  </append>
</tw_qolRecipes>
